<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/wall1"
    tools:context=".MainActivity">
    <!--android:background="#E21B67B8"-->

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tic_tac_toe"
            android:textColor="#8D170E27"
            android:textSize="50sp"

            android:textStyle="bold" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button1"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginStart="10pt"
                android:layout_marginLeft="10pt"
                android:layout_marginEnd="2pt"
                android:layout_marginRight="2pt"
                android:background="@drawable/cell"
                android:onClick="btnclick"
                android:textSize="45sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginEnd="3pt"
                android:layout_marginRight="3pt"
                android:background="@drawable/cell"
                android:onClick="btnclick"
                android:textSize="45sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:background="@drawable/cell"
                android:onClick="btnclick"
                android:textSize="45sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button4"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginStart="10pt"
                android:layout_marginLeft="10pt"
                android:layout_marginEnd="2pt"
                android:layout_marginRight="2pt"
                android:background="@drawable/cell2"
                android:onClick="btnclick"
                android:textSize="45sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginEnd="2pt"
                android:layout_marginRight="2pt"
                android:background="@drawable/cell2"
                android:onClick="btnclick"
                android:textSize="45sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:background="@drawable/cell2"
                android:onClick="btnclick"
                android:textSize="45sp" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button7"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginStart="10pt"
                android:layout_marginLeft="10pt"
                android:layout_marginEnd="2pt"
                android:layout_marginRight="2pt"
                android:background="@drawable/cell3"
                android:onClick="btnclick"
                android:textSize="45sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:layout_marginEnd="2pt"
                android:layout_marginRight="2pt"
                android:background="@drawable/cell3"
                android:onClick="btnclick"
                android:textSize="45sp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="45pt"
                android:layout_height="45pt"
                android:background="@drawable/cell3"
                android:onClick="btnclick"
                android:textSize="45sp" />

        </TableRow>
    </TableLayout>


    <LinearLayout
        android:id="@+id/players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/table"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/player1"
            android:layout_width="180dp"
            android:layout_height="20pt"
            android:background="@drawable/button"
            android:text="@string/player_1_0"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/player2"
            android:layout_width="180dp"
            android:layout_height="20pt"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button"
            android:text="@string/player_2_0"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/players"
        android:gravity="bottom"
        android:orientation="vertical">


        <!--<com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />-->

        <Button
            android:id="@+id/playAgain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:background="@drawable/btn"
            android:text="@string/play_again"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/newGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="@string/new_game"
            android:textColor="#ffffff"

            android:textSize="20sp" />

    </LinearLayout>

</RelativeLayout>
